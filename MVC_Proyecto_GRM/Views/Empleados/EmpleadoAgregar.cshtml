@model MVC_Proyecto_GRM.Models.ViewModels.Empleados.EmpleadoAgregar

@{
    ViewBag.Title = "Agregar un nuevo empleado";
}

<h2 class="text-center">@ViewBag.Title</h2>

@using (Html.BeginForm("EmpleadoAgregar", "Empleados", FormMethod.Post))    // Metodo, Controller, Post Method
{
    <div class="row">
        <div class="col-md-12">
            <div>
                @Html.LabelFor(d => d.Nombre, null, new { @class = "lblTitulo" })
                @Html.TextBoxFor(d => d.Nombre, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Nombre, "", new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.ApellidoP, null, new { @class = "lblTitulo" })
                @Html.TextBoxFor(d => d.ApellidoP, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.ApellidoP, "", new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.ApellidoM, null, new { @class = "lblTitulo" })
                @Html.TextBoxFor(d => d.ApellidoM, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.ApellidoM, "", new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.Salario, null, new { @class = "lblTitulo" })
                @Html.TextBoxFor(d => d.Salario, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Salario, "", new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.Puesto, null, new { @class = "lblTitulo" })
                @Html.TextBoxFor(d => d.Puesto, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Puesto, "", new { @class = "red" })
            </div>
            <div>
                @Html.Label("Dirección", null, new { @class = "lblTitulo" })
                @Html.DropDownListFor(d => d.DireccionId, new SelectList(ViewBag.ListaDirecciones, "DireccionId", "Direccion"), new { @class = "form-control" })
            </div>
            <div style="text-align: right;">
                <input value="Guardar" class="btn btn-success" type="submit" />
            </div>
        </div>
    </div>
}

