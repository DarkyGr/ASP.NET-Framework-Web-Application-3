@model List<MVC_Proyecto_GRM.Models.ViewModels.Rentas.RentasListar>
@{
    ViewBag.Title = "Listar de Rentas";
}

<h2 class="text-center">@ViewBag.Title</h2>

<div class="row">
    <div class="col-xs-2 m-md-2" style="text-align: right;">
        <a href="~/Rentas/RentaAgregar" class="btn btn-primary">Agregar Renta</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">

            <tr class="bg-warning text-center">
                <th style="width: 15%;">ID Renta</th>
                <th>ID Vehículo</th>
                <th>ID Cliente</th>
                <th>ID Empleado</th>
                <th>Costo</th>
                <th>Fecha de Renta</th>
                <th>Fecha de Renta Fin</th>
                <th>Acciones</th>
            </tr>

            @foreach (var Elemento in Model)
            {
                <tr class="text-center">
                    <td>@Elemento.RentaId</td>
                    <td>@Elemento.VehiculoId</td>
                    <td>@Elemento.ClienteId</td>
                    <td>@Elemento.EmpleadoId</td>
                    <td>@Elemento.Costo</td>
                    <td>@Elemento.FechaRenta</td>
                    <td>@Elemento.FechaRentaFin</td>
                    <td>
                        <a class="btn btn-warning" href="~/Rentas/RentaEditar/@Elemento.RentaId"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a class="btn btn-danger" href="~/Rentas/RentaEliminar/@Elemento.RentaId"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>