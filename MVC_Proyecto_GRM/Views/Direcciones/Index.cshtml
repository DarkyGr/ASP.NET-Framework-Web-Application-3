@model List<MVC_Proyecto_GRM.Models.ViewModels.Direcciones.DireccionesListar>
@{
    ViewBag.Title = "Listar Direcciones";
}

<div class="row p-md-2">
    <div class="card text-bg-dark">
        <img src="/Recursos/wp-1.jpg" class="card-img" alt="...">
        <div class="card-img-overlay text-center">
            <h1 class="card-title">@ViewBag.Title</h1>
            <p class="card-text">
                <small>
                    Para recordar como se manejan las acciones clic
                    @Html.ActionLink("aquí", "About", "Home", new { area = "" }, new { @class = "text-primary" }).
                </small>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-2 m-md-2" style="text-align: right;">
        <a href="~/Direcciones/DireccionAgregar" class="btn btn-primary">Agregar Dirección</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">

            <tr class="bg-warning text-center">
                <th style="width: 15%;">ID Dirección</th>
                <th>Calle</th>
                <th>Número</th>
                <th>Colonia</th>
                <th>CP</th>
                <th>Municpio</th>
                <th>Ciudad</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>

            @foreach (var Elemento in Model)
            {
                <tr class="text-center">
                    <td>@Elemento.DireccionId</td>
                    <td>@Elemento.Calle</td>
                    <td>@Elemento.Numero</td>
                    <td>@Elemento.Colonia</td>
                    <td>@Elemento.CP</td>
                    <td>@Elemento.Municipio</td>
                    <td>@Elemento.Ciudad</td>
                    <td>@Elemento.Estado</td>
                    <td>
                        <a class="btn btn-warning" href="~/Direcciones/DireccionEditar/@Elemento.DireccionId"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a class="btn btn-danger" href="~/Direcciones/DireccionEliminar/@Elemento.DireccionId"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>