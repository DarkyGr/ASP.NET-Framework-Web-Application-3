@model List<MVC_Proyecto_GRM.Models.ViewModels.Vehiculos.VehiculosListar>
@{
    ViewBag.Title = "Listar Vehículos";
}

<div class="row p-md-2">
    <div class="card text-bg-dark">
        <img src="/Recursos/wp-1.jpg" class="card-img" alt="...">
        <div class="card-img-overlay text-center">
            <h1 class="card-title">@ViewBag.Title</h1>
            <p class="card-text">
                <small>
                    Para recordar como se manejan las acciones clic
                    @Html.ActionLink("aquí", "About", "Home", new { area = "" }, new { @class = "text-primary" }).
                </small>
            </p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-2 m-md-2" style="text-align: right;">
        <a href="~/Vehiculos/VehiculoAgregar" class="btn btn-primary">Agregar Vehículo</a>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-bordered">

            <tr class="bg-warning text-center">
                <th style="width: 15%;">ID Vehículo</th>
                <th>Matrícula</th>
                <th>Marca</th>
                <th>Modelo</th>
                <th>Capacidad</th>
                <th>Kilometraje</th>
                <th>Acciones</th>
            </tr>

            @foreach (var Elemento in Model)
            {
                <tr class="text-center">
                    <td>@Elemento.VehiculoId</td>
                    <td>@Elemento.Matricula</td>
                    <td>@Elemento.Marca</td>
                    <td>@Elemento.Modelo</td>
                    <td>@Elemento.Capacidad</td>
                    <td>@Elemento.Kilometraje</td>
                    <td>
                        <a class="btn btn-warning" href="~/Vehiculos/VehiculoEditar/@Elemento.VehiculoId"><i class="fa-solid fa-pen-to-square"></i></a>
                        <a class="btn btn-danger" href="~/Vehiculos/VehiculoEliminar/@Elemento.VehiculoId"><i class="fa-solid fa-trash"></i></a>
                    </td>
                </tr>
            }

        </table>
    </div>
</div>