@model MVC_Proyecto_GRM.Models.Rentas

<h2 class="text-center">Editando renta con ID: @Html.ValueFor(d => d.RentaId)</h2>

@using (Html.BeginForm("RentaEditar", "Rentas", FormMethod.Post))    // Metodo, Controller, Post Method
{
    <div class="row">
        <div class="col-md-12">
            @Html.HiddenFor(d => d.RentaId)
            <div>
                @Html.Label("Vehículo", null, new { @class = "lblTitulo" })
                @Html.DropDownListFor(d => d.VehiculoId, new SelectList(ViewBag.ListaVehiculos, "VehiculoId", "Info"), new { @class = "form-control" })
            </div>
            <div>
                @Html.Label("Cliente", null, new { @class = "lblTitulo" })
                @Html.DropDownListFor(d => d.ClienteId, new SelectList(ViewBag.ListaClientes, "ClienteId", "Nombre"), new { @class = "form-control" })
            </div>
            <div>
                @Html.Label("Empleado", null, new { @class = "lblTitulo" })
                @Html.DropDownListFor(d => d.EmpleadoId, new SelectList(ViewBag.ListaEmpleados, "EmpleadoId", "Nombre"), new { @class = "form-control" })
            </div>
            <div>
                @Html.LabelFor(d => d.Costo, null, new { @class = "lblTitulo" })
                @Html.TextBoxFor(d => d.Costo, "", new { @class = "form-control" })
                @Html.ValidationMessageFor(d => d.Costo, "", new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.FechaRenta, null, new { @class = "lblTitulo" })<br />
                @Html.EditorFor(d => d.FechaRenta, "", new { @class = "date" })
                @Html.ValidationMessageFor(d => d.FechaRenta, "", new { @class = "red" })
            </div>
            <div>
                @Html.LabelFor(d => d.FechaRentaFin, null, new { @class = "lblTitulo" })<br />
                @Html.EditorFor(d => d.FechaRentaFin, "", new { @class = "date" })
                @Html.ValidationMessageFor(d => d.FechaRentaFin, "", new { @class = "red" })
            </div>
            <div style="text-align: right;">
                <input value="Guardar" class="btn btn-success" type="submit" />
            </div>
        </div>
    </div>
}